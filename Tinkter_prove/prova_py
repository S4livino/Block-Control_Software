import tkinter as tk
from tkinter import messagebox

# Funzione per il menu
def on_new():
    messagebox.showinfo("New", "Nuovo progetto creato!")

def on_open():
    messagebox.showinfo("Open", "Apri un progetto!")

def on_save():
    messagebox.showinfo("Save", "Progetto salvato!")

def on_exit():
    root.quit()

# Creazione della finestra principale
root = tk.Tk()
root.title("Interfaccia Grafica con Menu")
root.geometry("600x400")
root.configure(bg="#7E1891")

# Stile per la finestra
root.option_add("*Font", "Helvetica 12")  # Cambia il font globale

# Menu principale
menubar = tk.Menu(root, bg="#4CAF50", fg="white", font="Helvetica 12 bold")

# Menu File
file_menu = tk.Menu(menubar, tearoff=0, bg="#4CAF50", fg="black", font="Helvetica 12")
file_menu.add_command(label="New", command=on_new)
file_menu.add_command(label="Open", command=on_open)
file_menu.add_command(label="Save", command=on_save)
file_menu.add_separator()
file_menu.add_command(label="Exit", command=on_exit)

# Aggiungi il menu File al menubar
menubar.add_cascade(label="File", menu=file_menu)

# Menu Help
help_menu = tk.Menu(menubar, tearoff=0, bg="#4CAF50", fg="white", font="Helvetica 12")
help_menu.add_command(label="About", command=lambda: messagebox.showinfo("About", "Questa Ã¨ una semplice interfaccia grafica"))
menubar.add_cascade(label="Help", menu=help_menu)

# Imposta il menubar
root.config(menu=menubar)

# Area principale di contenuto
frame = tk.Frame(root, bg="#7E1891", bd=2, relief="sunken")
frame.pack(pady=20, padx=20, fill="both", expand=True)

label = tk.Label(frame, text="Benvenuto nella tua app!", bg="#7E1891", font="Helvetica 16 bold")
label.pack(padx=20, pady=20)

# Aggiungi un bottone che cambia contenuto nel frame
def change_content():
    label.config(text="Contenuto aggiornato!")
button = tk.Button(frame, text="Cambia contenuto", command=change_content, bg="#4CAF50", fg="white", font="Helvetica 12")
button.pack(pady=10)

# Avvia la finestra
root.mainloop()
